@model PrivacyModel
@{
    ViewData["Title"] = "Contact Us";
}
<style>

.input {
  width: 100%;
  height: 150px;
  
  box-sizing: border-box;
  border: 2px solid #ccc;
  border-radius: 4px;
  background-color: #f8f8f8;
 
}
input[type=text] {
  transition: width 1.9s ease-in-out;
}

input[type=text]:focus {
  width: 100%;
}
.select {
  width: 100%;
  padding: 16px 20px;
  border: none;
  border-radius: 4px;
  background-color: #f1f1f1;
  box-shadow:2px 2px;
}
button{
 border-radius:2px;
 background-color:palegreen;
}
</style>
<h1>@ViewData["title"]</h1>
<body style="background-color:lightgreen;">
<form class="select">
<input type="text" Placeholder="From" /><br><br>
<input type="text" Placeholder="To" /><br><br>
<input type="text" Placeholder="Subject" /><br><br>
</Form>
<button >Send</button>

</body>